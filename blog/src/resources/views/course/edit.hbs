<div class='mt-4'>
    <form method='POST' action='/courses/{{course._id}}?_method=PUT' >
        <div class='form-group'>
            <label for='exampleInputEmail1'>Name</label>
            <input class='form-control' name='name' value="{{course.name}}">
            <small id='emailHelp' class='form-text text-muted'> </small>
        </div>

        <div class='form-group'>
            <label for='exampleInputEmail1'>Description</label>
            <textarea class='form-control' name='description' >{{course.description}}</textarea>
            <small id='emailHelp' class='form-text text-muted'> </small>
        </div>
        <div class='form-group'>
            <label for='exampleInputEmail1'>VideoID</label>
            <input class='form-control' name='videoID' value="{{course.videoID}}">
            <small id='emailHelp' class='form-text text-muted'> </small>
        </div>

        <div class='form-group'>
            <label for='exampleInputEmail1'>Level</label>
            <input class='form-control' name='level' value="{{course.level}}">
            <small id='emailHelp' class='form-text text-muted'> </small>
        </div>
        <button type='submit' class='btn btn-primary'>Lưu khoá học</button>
    </form>
</div>